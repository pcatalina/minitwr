extends layout

script.
    document.getElementById("buttonSignUp").innerHTML = signUp();


block content

    form(class="registerForm", action="/signup", method="POST")
        label(for='exampleInputText', class="registerForm")
            img(src="../images/TwitterIntro-48.png")
            | New to MiniTW?

        .form-group
            input#exampleInputFullName.form-control( class="registerBlanck", type='text', placeholder='Full name')
        .form-group
            input#exampleInputEmail1.form-control.registerBlanck(type='email', placeholder='Enter email')
        .form-group
            input#exampleInputPassword1.form-control.registerBlanck(type='password', placeholder='Password')
        .form-group
            label(for='exampleInputFile')
                span.glyphicon.glyphicon-picture
                | (optional)
        input#exampleInputFile(class="uploadFile", type='file')

        button#buttonSignUp.btn.btn-default.submit-button(type='submit') Sign up



